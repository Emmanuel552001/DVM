{% extends 'base.html.twig' %}
 
{% block main %}
    <section>
 
    <h2>équipements</h2>
 
    <nav>
        <ul>
            <li><a href="/equipement/ajouter">[+] Ajouter</a></li>
            <li><a href="/equipement/tout_supprimer">[x] Tout Supprimer</a></li>
        </ul>
    </nav>
 
    {% if liste_equipements is empty %}
 
        <p>Aucun équipement trouvé.</p>
 
    {% else %}
 
    <table>
        <tr>
            <th style="width: 50px">Id</th>
            <th style="width: 150px">Marque</th>
            <th style="width: 150px">Modèle</th>
            <th style="width: 150px">Conducteur</th>
            <th style="width: 50px">Suppr.</th>
            <th style="width: 50px">Mod.</th>
           
        </tr>
        {% for e in liste_equipements %}
            <tr>
               
                <td class="center">{{ e.ve_id }}</td>
                <td> {{ e.eq_libelle }}</td>
                <td> {{ e.eq_prix }}</td>
                <td class="center"><img src="{{ asset('images/delete.png') }}" alt="delete"
                    onclick="return equipement_supprimer({{ e.ve_id }}, '{{ e.eq_libelle }}', '{{ e.eq_prix }}');" /></td>
                <td class="center"><img src="{{ asset('images/modify.png') }}" alt="modify"
                    onclick="return equipement_modifier({{ e.ve_id }}, '{{ e.eq_libelle }}', '{{ e.eq_prix }}');" /></td>
               
            </tr>
        {% endfor %}
    </table>
 
    {% endif %}
 
    </section>
{% endblock %}