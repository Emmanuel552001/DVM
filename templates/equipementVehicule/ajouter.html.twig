{% extends 'base.html.twig' %}

{% block main %}

{% block title %}Ajouter un équipement à {{ vehicule.VeMarque }} {{ vehicule.VeModele }}{% endblock %}
<div class="container mt-4">
    <h2>Ajouter un équipement à {{ vehicule.VeMarque }} {{ vehicule.VeModele }}</h2>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.eqve_equipement) }}
            {{ form_widget(form.eqve_equipement, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.eqve_equipement) }}
        </div>

        <div class="mb-3 d-none">  {# On cache la sélection du véhicule car il est pré-rempli #}
            {{ form_widget(form.eqve_vehicule) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.eqve_quantite) }}
            {{ form_widget(form.eqve_quantite, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.eqve_quantite) }}
        </div>

        <a href="{{ path('vehicule_detail', {'id': vehicule.VeId}) }}" class="btn btn-secondary">Retour</a>
    {{ form_end(form) }}
</div>
{% endblock %}
