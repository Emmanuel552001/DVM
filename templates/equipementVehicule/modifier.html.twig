{% extends 'base.html.twig' %}

{% block main %}
{% block title %}Modifier l'équipement du véhicule{% endblock %}
<div class="container mt-4">
    <h2>Modifier l'équipement pour le véhicule {{ equipementVehicule.eqVeVehicule.VeMarque }} {{ equipementVehicule.eqVeVehicule.VeModele }}</h2>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.eqve_equipement) }}
            {{ form_widget(form.eqve_equipement, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(form.eqve_equipement) }}
        </div>

        <div class="mb-3 d-none">  {# Masquer la modification du véhicule #}
            {{ form_widget(form.eqve_vehicule) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.eqve_quantite) }}
            {{ form_widget(form.eqve_quantite, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.eqve_quantite) }}
        </div>


        <a href="{{ path('vehicule_detail', {'id': equipementVehicule.eqVeVehicule.VeId}) }}" class="btn btn-secondary">Retour</a>
    {{ form_end(form) }}
</div>
{% endblock %}
